<% include ../partials/header %>

<div class="container">  	
  	<div class="row">
  		<h1 style="text-align: center;">Edit <%= sneaker.name %></h1>
  		<div style="width: 30%; margin: 30px auto;">
  			<form action="/sneakers/<%= sneaker._id %>?_method=PUT" method="POST">
  				<div class="form-group">
  					<input class="form-control" type="text" value="<%= sneaker.name %>" name="sneaker[name]">
  				</div>
  				<div class="form-group">
  				  <input class="form-control" type="number" value="<%= sneaker.price %>" name="sneaker[price]" min="0.00" step="1.00">
  				</div>
  				<div class="form-group">
  					<input class="form-control" type="text" value="<%= sneaker.image %>" name="sneaker[image]">
  				</div>
  				<div class="form-group">
  					<input class="form-control" type="text" value="<%= sneaker.description %>" name="sneaker[description]">
  				</div>
  				<div class="form-group">
  					<button class="btn btn-lg btn-default btn-block btn-primary" >submit</button>
  				</div>
  			</form>
  			<a href="/sneakers">Back to Sneakers</a>
  		</div>  		
  	</div>
</div>

<% include ../partials/footer %>
